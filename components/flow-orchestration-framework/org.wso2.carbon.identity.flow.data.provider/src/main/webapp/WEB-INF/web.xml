<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>DFDP (Debug Flow Data Provider) Service</display-name>
    <description>
        DFDP Service provides REST API endpoints for testing external IdP claim mappings
        and authentication flows. Part 7: Response Generation component.
    </description>

    <!-- DFDP Servlet -->
    <servlet>
        <servlet-name>DFDPServlet</servlet-name>
        <servlet-class>org.wso2.carbon.identity.flow.data.provider.dfdp.servlet.DFDPServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>DFDPServlet</servlet-name>
        <url-pattern>/debug</url-pattern>
    </servlet-mapping>

    <!-- CORS Filter for external API access -->
    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>org.wso2.carbon.identity.flow.data.provider.dfdp.filter.CORSFilter</filter-class>
        <init-param>
            <param-name>allowedOrigins</param-name>
            <param-value>*</param-value>
        </init-param>
        <init-param>
            <param-name>allowedMethods</param-name>
            <param-value>GET,POST,OPTIONS</param-value>
        </init-param>
        <init-param>
            <param-name>allowedHeaders</param-name>
            <param-value>Content-Type,Authorization,X-Requested-With</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/debug</url-pattern>
    </filter-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.json</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error/500.json</location>
    </error-page>

    <!-- Security Constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>DFDP API</web-resource-name>
            <url-pattern>/debug</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>dfdp-user</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Security roles -->
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    
    <security-role>
        <role-name>dfdp-user</role-name>
    </security-role>

    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
    </session-config>

</web-app>
